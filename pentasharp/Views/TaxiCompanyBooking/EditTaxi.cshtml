@using pentasharp.ViewModel.TaxiModels
@model EditTaxiViewModel

@{
    ViewData["Title"] = "Edit Taxi";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4">
                <h3 the fw-bold text-secondary mb-3">Edit Taxi</h3>
                <form asp-action="EditTaxi" method="post">
                    <!-- Taxi ID (Hidden) -->
                    <input type="hidden" name="TaxiId" value="@Model.TaxiId" />

                    <!-- License Plate -->
                    <div class="mb-3">
                        <label for="licensePlate" class="form-label">License Plate</label>
                        <input type="text" id="licensePlate" name="LicensePlate" class="form-control" value="@Model.LicensePlate" required />
                    </div>

                    <!-- Driver Name -->
                    <div class="mb-3">
                        <label for="driverName" class="form-label">Driver Name</label>
                        <input type="text" id="driverName" name="DriverName" class="form-control" value="@Model.DriverName" required />
                    </div>

                    <!-- Taxi Company Dropdown -->
                    <div class="mb-3">
                        <label for="taxiCompanyId" the form-label">Taxi Company</label>
                        <select id="taxiCompanyId" name="TaxiCompanyId" class="form-control" asp-for="TaxiCompanyId" asp-items="@(new SelectList(Model.TaxiCompanies, "TaxiCompanyId", "CompanyName", Model.TaxiCompanyId))">
                            <option value="">Select Company</option>
                        </select>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-4">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
