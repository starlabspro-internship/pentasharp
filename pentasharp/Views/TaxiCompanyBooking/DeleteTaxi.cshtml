@using pentasharp.ViewModel.TaxiModels
@model AddTaxiViewModel

@{
    ViewData["Title"] = "Delete Taxi";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4">
                <h3 class="fw-bold text-secondary mb-3">Delete Taxi</h3>
                <p>Are you sure you want to delete this taxi?</p>

                <!-- Display Taxi Details -->
                <p><strong>Taxi License Plate: @Model.LicensePlate</strong></p>
                <p>Driver: @Model.DriverName</p>
                <p>Company: @Model.TaxiCompany?.CompanyName</p>

                <form asp-action="DeleteTaxiConfirmed" asp-route-id="@Model.TaxiId" method="post">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a href="@Url.Action("AddTaxiCompany", "TaxiCompanyBooking")" class="btn btn-secondary btn-lg">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
