@{
    ViewData["Title"] = "Confirm Reservations";
}

<div class="container my-5">
    <h1 class="text-center fw-bold text-primary mb-4">Confirm Reservations</h1>

    <div class="list-group">
        <div class="list-group-item d-flex align-items-center justify-content-between shadow-sm p-3 mb-2 rounded">
            <div class="reservation-details">
                <h6 class="mb-1 fw-bold">Jane Smith</h6>
                <small class="text-muted">Route: Central Station to Downtown | Bus Number: DT456</small><br>
                <small class="text-muted">Date: 2024-11-16 | Time: 09:30 AM | Seats: 2</small>
            </div>
            <div class="action-buttons">
                <button class="btn btn-outline-success btn-sm me-2" onclick="confirmReservation('Jane Smith')">
                    <i class="fas fa-check"></i> Confirm
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteReservation('Jane Smith')">
                    <i class="fas fa-times"></i> Delete
                </button>
            </div>
        </div>

        <div class="list-group-item d-flex align-items-center justify-content-between shadow-sm p-3 mb-2 rounded">
            <div class="reservation-details">
                <h6 class="mb-1 fw-bold">Michael Johnson</h6>
                <small class="text-muted">Route: Uptown to Central Park | Bus Number: UP789</small><br>
                <small class="text-muted">Date: 2024-11-17 | Time: 11:00 AM | Seats: 1</small>
            </div>
            <div class="action-buttons">
                <button class="btn btn-outline-success btn-sm me-2" onclick="confirmReservation('Michael Johnson')">
                    <i class="fas fa-check"></i> Confirm
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteReservation('Michael Johnson')">
                    <i class="fas fa-times"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmReservation(passengerName) {
        alert(`Reservation confirmed for ${passengerName}`);
    }

    function deleteReservation(passengerName) {
        alert(`Reservation deleted for ${passengerName}`);
    }
</script>

<style>
    .reservation-details {
        font-size: 0.9rem;
    }
    .action-buttons .btn {
        font-size: 0.85rem;
    }
    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
