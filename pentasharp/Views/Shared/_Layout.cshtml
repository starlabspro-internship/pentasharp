@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isLoggedIn = ViewContext.HttpContext.Session.GetString("UserId") != null;
    var userName = ViewContext.HttpContext.Session.GetString("FirstName");
    var isAdmin = ViewContext.HttpContext.Session.GetString("IsAdmin") == "true";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PentaSharp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .navbar-custom {
            background-color: #007bff;
            padding: 1rem;
        }

        .navbar-brand {
            color: #ffffff !important;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .nav-link {
            color: #ffffff !important;
            font-size: 1rem;
            transition: color 0.3s ease;
            text-decoration: none !important;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
                text-decoration: underline;
            }

        .btn-custom {
            background-color: #ffffff;
            color: #007bff;
            font-weight: bold;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #f1f1f1;
                color: #0056b3;
            }

        .dropdown-menu-notification {
            width: 300px;
            padding: 0;
            border: none;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

            .dropdown-menu-notification a {
                color: #343a40;
                padding: 10px;
                font-size: 0.9rem;
            }

                .dropdown-menu-notification a:hover {
                    background-color: #f8f9fa;
                    text-decoration: none !important;
                }

        .badge-custom {
            background-color: #dc3545;
            color: #ffffff;
            font-weight: bold;
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(220, 53, 69, 0.3);
        }

        .footer-custom {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 1.5rem;
            font-size: 0.9rem;
        }

            .footer-custom a {
                color: #007bff;
                text-decoration: none;
            }

                .footer-custom a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    @if (!(currentController == "Authenticate" && (currentAction == "Login" || currentAction == "Register")))
    {
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PentaSharp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                            @if (isAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                                </li>
                            }
                        @if (currentController == "Bus" && currentAction == "BusManagement")
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Bus" asp-action="CreateBusCompany">Create Bus Company</a>
                        </li>
                        }
                        @if (currentController == "Taxi" && currentAction == "TaxiManagement")
                        {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Taxi" asp-action="CreateTaxiCompany">Create Taxi Company</a>
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                            @if (isLoggedIn)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-bell fa-lg text-white"></i>
                                        <span class="badge badge-custom position-absolute top-0 start-100 translate-middle">3</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-notification" aria-labelledby="notificationDropdown">
                                        <li><a class="dropdown-item" href="#">New reservation from John Doe</a></li>
                                        <li><a class="dropdown-item" href="#">Bus #12 delayed by 15 mins</a></li>
                                        <li><a class="dropdown-item" href="#">Taxi #45 ready for pickup</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-center" asp-controller="Notification" asp-action="AllNotifications">View All Notifications</a></li>
                                    </ul>
                                </li>
                            }
                            @if (isLoggedIn)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle"></i> Hello, @userName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-custom" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item dropdown-item-custom" asp-controller="Authenticate" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <button type="button" class="btn btn-custom ms-3" onclick="location.href='@Url.Action("Login", "Authenticate")'">Login</button>
                                </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    }

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!(currentController == "Authenticate" && (currentAction == "Login" || currentAction == "Register")))
    {
    <footer class="footer-custom border-top text-center mt-5">
        <div class="container">
            <span>&copy; 2024 PentaSharp | </span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
