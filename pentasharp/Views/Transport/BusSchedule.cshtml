@{
    ViewData["Title"] = "Bus Schedule";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Bus Schedule</h1>
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <div class="input-group rounded">
                <input type="search" class="form-control rounded" placeholder="Search by destination or company" aria-label="Search" aria-describedby="search-addon" />
                <span class="input-group-text border-0 bg-primary text-white" id="search-addon">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="fw-bold mb-0">Express Transit Co.</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h6 class="fw-bolder text-primary">Bus from City A</h6>
                        <h6 class="fw-bolder text-primary">Bus to City C</h6>
                        <p class="mb-2">Bus Number: <strong>123</strong></p>
                        <p>Departure: <strong>10:00 AM</strong></p>
                        <p>Arrival: <strong>1:00 PM</strong></p>
                        <p>Price: <strong>$15.00</strong></p>
                        <span class="badge rounded-pill bg-success">Scheduled</span>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <button class="btn btn-outline-primary mt-auto" data-bs-toggle="modal" data-bs-target="#bookingModal">Book Ticket</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="fw-bold mb-0">Cityline Buses</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h6 class="fw-bolder text-primary">Bus from City A</h6>
                        <h6 class="fw-bolder text-primary">Bus to City B</h6>
                        <p class="mb-2">Bus Number: <strong>456</strong></p>
                        <p>Departure: <strong>11:30 AM</strong></p>
                        <p>Arrival: <strong>2:30 PM</strong></p>
                        <p>Price: <strong>$20.00</strong></p>
                        <span class="badge rounded-pill bg-danger">Cancelled</span>
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <button class="btn btn-outline-primary mt-auto" data-bs-toggle="modal" data-bs-target="#bookingModal">Book Ticket</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Confirm Your Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="bookingDetails">
                    <p><strong>Bus Company:</strong> Express Transit Co.</p>
                    <p><strong>Bus Number:</strong> 123</p>
                    <p><strong>Departure:</strong> 10:00 AM</p>
                    <p><strong>Arrival:</strong> 1:00 PM</p>
                    <p><strong>Price:</strong> $15.00</p>
                    <div class="mb-3">
                        <label for="passengerName" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="passengerName" value="John Doe" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm Booking</button>
            </div>
        </div>
    </div>
</div>