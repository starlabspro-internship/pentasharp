@{
    ViewData["Title"] = "All Notifications";
}

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary">All Notifications</h2>

    <div class="list-group shadow-sm">
        <div class="list-group-item list-group-item-action" style="border-left: 5px solid #007bff;">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 fw-bold">Booking Notification</h5>
                <small class="text-muted">Sent at: November 15, 2024 - 09:30 AM</small>
            </div>
            <p class="mb-1">Your booking for a taxi to Central Park is confirmed.</p>
            <small class="text-success fw-bold">Read</small>
        </div>

        <div class="list-group-item list-group-item-action" style="border-left: 5px solid #28a745;">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 fw-bold">Reservation Confirmation</h5>
                <small class="text-muted">Sent at: November 18, 2024 - 08:45 AM</small>
            </div>
            <p class="mb-1">Your reservation is confirmed with a total price of <strong>€30.00</strong>. Click for more details.</p>
            <button class="btn btn-sm btn-outline-primary mt-2" onclick="showDetailsModal()">More Details</button>
            <small class="text-danger fw-bold d-block mt-2">Unread</small>
        </div>

        <div class="list-group-item list-group-item-action" style="border-left: 5px solid #ffc107;">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 fw-bold">Reminder Notification</h5>
                <small class="text-muted">Sent at: November 16, 2024 - 10:00 AM</small>
            </div>
            <p class="mb-1">Reminder: Your bus reservation to Washington is scheduled for tomorrow.</p>
            <small class="text-danger fw-bold">Unread</small>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="detailsModalLabel">Reservation Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Your reservation is confirmed with a total price of <strong>€30.00</strong>.</p>
                <p>Do you accept this reservation?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel Reservation</button>
                <button type="button" class="btn btn-primary" onclick="acceptReservation()">Accept Reservation</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showDetailsModal() {
        new bootstrap.Modal(document.getElementById('detailsModal')).show();
    }

    function acceptReservation() {
        alert('You have accepted the reservation.');
        new bootstrap.Modal(document.getElementById('detailsModal')).hide();
    }
</script>

<style>
    .list-group-item {
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        margin-bottom: 1rem;
    }

        .list-group-item h5 {
            color: #007bff;
        }

    .list-group-item-action {
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

        .list-group-item-action:hover {
            background-color: #f8f9fa;
        }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
        transition: background-color 0.2s ease;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #ffffff;
        }

    .fw-bold {
        font-weight: 600;
    }
</style>
