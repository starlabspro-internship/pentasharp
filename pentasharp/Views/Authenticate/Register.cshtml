@model pentasharp.ViewModel.Authenticate.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-3 rounded-4" style="max-width: 500px; width: 100%; background-color: #ffffff;">
        <div class="text-center mb-3">
            <img src="~/img/brand-logo.png" alt="PentaSharp" style="max-width: 120px; margin-bottom: 15px;">
            <h4 class="fw-bold text-primary">Create Your Account</h4>
            <p class="text-muted">Sign up to access exclusive features</p>
        </div>
        <form asp-action="Register" method="post">
            <div class="form-floating mb-2">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" required>
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" required>
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" required>
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" class="form-control" placeholder="Password" type="password" required>
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" required>
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="terms" required>
                <label class="form-check-label" for="terms">
                    I agree to the <a href="#!" class="text-decoration-none">terms and conditions</a>
                </label>
            </div>
            <div class="d-grid mb-2">
                <button class="btn btn-primary btn-sm" type="submit">Register</button>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
            <div class="text-danger mb-2 text-center">
                @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
            }
        </form>
        <div class="text-center mt-2">
            <p class="text-muted mb-0">Already have an account? <a href="@Url.Action("Login", "Authenticate")" class="text-primary">Log In</a></p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: "Poppins", sans-serif;
    }

    .card {
        border: none;
    }

    h4 {
        font-size: 1.5rem;
        color: #4a4a4a;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 0.9rem;
    }

    .form-floating label {
        padding-left: 10px;
        color: #6c757d;
        font-size: 0.85rem;
    }

    .btn-primary {
        background-color: #ff0077;
        border: none;
        font-weight: bold;
        padding: 8px 15px;
        border-radius: 20px;
        transition: all 0.3s ease-in-out;
        font-size: 0.9rem;
    }

        .btn-primary:hover {
            background-color: #cc0066;
        }

    a {
        text-decoration: none;
    }

        a.text-primary:hover {
            text-decoration: underline;
        }

    img {
        border-radius: 50%;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">