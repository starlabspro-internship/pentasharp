@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        overflow: hidden;
        background-color: #f8f9fa;
    }
</style>

<div class="container-fluid min-vh-100 d-flex">
    <div class="row w-100 m-0 align-items-center justify-content-center">
        <div class="col-md-6 d-none d-md-flex justify-content-center align-items-center bg-light text-center p-5">
            <div>
                <h1 class="font-weight-bold">Welcome to PentaSharp</h1>
                <p class="lead">Your reliable transport scheduling partner</p>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xl-5">
            <div class="card border-0 rounded-4 shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3 class="font-weight-bold">Sign Up</h3>
                        <p>Already have an account? <a href="./Login">Log in</a></p>
                    </div>
                    <form action="#!">
                        <div class="row gy-3">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="full_name" id="full_name" placeholder="John Doe" required>
                                    <label for="full_name" class="form-label">Full Name</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                    <label for="email" class="form-label">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                                    <label for="password" class="form-label">Password</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="terms" id="terms" required>
                                    <label class="form-check-label text-secondary" for="terms">
                                        I agree to the <a href="#!" class="text-decoration-none">terms and conditions</a>
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg" type="submit">Register Now</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <a href="#!" class="text-decoration-none">Forgot password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
