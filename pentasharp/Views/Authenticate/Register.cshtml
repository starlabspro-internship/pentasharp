@{
    ViewData["Title"] = "Register";
}


<div class="container d-flex min-vh-100 align-items-center justify-content-center">
    <div class="row register-container w-100">
        <div class="col-md-6 welcome-section d-none d-md-flex flex-column justify-content-center align-items-center">
            <h1>Welcome to PentaSharp</h1>
            <p>Your reliable transport scheduling partner</p>
        </div>

        <div class="col-12 col-md-6 form-section">
            <div class="text-center mb-4">
                <h3>Sign Up</h3>
                <p class="text-muted">Already have an account? <a href="./Login">Log in</a></p>
            </div>
            <form action="#!">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="full_name" placeholder="John Doe" required>
                    <label for="full_name">Full Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                    <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="terms" required>
                    <label class="form-check-label" for="terms">
                        I agree to the <a href="#!" class="text-decoration-none">terms and conditions</a>
                    </label>
                </div>
                <div class="d-grid mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">Register Now</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a href="#!" class="text-muted">Forgot password?</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        overflow: hidden;
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
    }

    .register-container {
        max-width: 900px;
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .welcome-section {
        background: #007bff;
        color: #fff;
        padding: 50px;
    }

        .welcome-section h1 {
            font-size: 2rem;
            font-weight: bold;
        }

        .welcome-section p {
            font-size: 1rem;
        }

    .form-section {
        padding: 50px;
    }

        .form-section h3 {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
        }

    .form-floating label {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        padding: 0.75rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-check-label {
        color: #6c757d;
    }

    .form-section .text-muted {
        color: #6c757d;
    }

    .form-section a {
        color: #007bff;
        transition: color 0.3s;
    }

        .form-section a:hover {
            color: #0056b3;
        }
</style>