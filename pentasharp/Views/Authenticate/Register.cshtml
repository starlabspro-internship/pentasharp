@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex min-vh-100 align-items-center justify-content-center">
    <div class="row register-container w-100">
        <div class="col-md-6 welcome-section d-flex flex-column justify-content-center align-items-center text-center">
            <h1 class="mb-3 welcome-heading">Welcome to PentaSharp</h1>
            <p class="welcome-text mb-4">Your reliable transport scheduling partner</p>
            <a href="@Url.Action("Index", "Home")" class="btn-welcome-home">
                <i class="fas fa-home me-2"></i>Go to Home
            </a>
        </div>

        <div class="col-12 col-md-6 form-section">
            <div class="text-center mb-4">
                <h3>Sign Up</h3>
                <p class="text-muted">Already have an account? <a href="./Login">Log in</a></p>
            </div>
            <form action="#!">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="full_name" placeholder="John Doe" required>
                    <label for="full_name">Full Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                    <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="tel" class="form-control" id="phone_number" placeholder="Phone Number" required>
                    <label for="phone_number">Phone Number</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="terms" required>
                    <label class="form-check-label" for="terms">
                        I agree to the <a href="#!" class="text-decoration-none">terms and conditions</a>
                    </label>
                </div>
                <div class="d-grid mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">Register Now</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a href="#!" class="text-muted">Forgot password?</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        overflow: hidden;
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
    }

    .register-container {
        max-width: 900px;
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .welcome-section {
        background: #007bff;
        color: #fff;
        padding: 50px;
        text-align: center;
    }

    .welcome-heading {
        font-size: 2.2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .welcome-text {
        font-size: 1rem;
        max-width: 80%;
        line-height: 1.5;
    }

    .btn-welcome-home {
        display: inline-flex;
        align-items: center;
        color: #007bff;
        background-color: #fff;
        font-weight: bold;
        text-decoration: none;
        padding: 0.5rem 1.5rem;
        border: 2px solid #fff;
        border-radius: 30px;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
    }

        .btn-welcome-home i {
            font-size: 1rem;
        }

        .btn-welcome-home:hover {
            background-color: #0056b3;
            color: #fff;
            border-color: #0056b3;
            box-shadow: 0px 6px 12px rgba(0, 91, 187, 0.3);
        }

    .form-section {
        padding: 50px;
    }

        .form-section h3 {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
        }

    .form-floating label {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        padding: 0.75rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-check-label {
        color: #6c757d;
    }

    .form-section .text-muted {
        color: #6c757d;
    }

    .form-section a {
        color: #007bff;
        transition: color 0.3s;
    }

        .form-section a:hover {
            color: #0056b3;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
