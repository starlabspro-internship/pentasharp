@model pentasharp.Models.Entities.User

<h2>Delete User</h2>

<p>Are you sure you want to delete this user?</p>

<p><strong>@Model.FirstName @Model.LastName</strong></p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("UserList", "Authenticate")" class="btn btn-secondary">Cancel</a>
</form>