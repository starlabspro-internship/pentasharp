@{
    Layout = "_Layout";
    ViewData["Title"] = "Bus Schedule";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-3 fw-bold text-primary mb-4">Welcome to PentaSharp</h1>
        <p class="lead text-secondary fs-4">Your reliable transport scheduling partner</p>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10 col-md-12">
            <div class="card border-0 shadow rounded-4 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-6">
                        <img src="https://img3.stockfresh.com/files/j/jossdiim/m/95/8211128_stock-vector-city-public-transport.jpg" class="img-fluid h-100" alt="Bus Schedule" style="object-fit: cover;" />
                    </div>
                    <div class="col-md-6 bg-light">
                        <div class="card-body d-flex flex-column justify-content-center text-center px-5 py-5">
                            <h5 class="card-title fw-bold text-dark fs-2">Your Transport Options</h5>
                            <p class="card-text text-muted mb-4 fs-5">
                                Explore our extensive bus schedules and convenient taxi services to make your journey seamless. Ready to start?
                            </p>
                            <div>
                                <a href="@Url.Action("BusSchedule", "Bus")" class="btn btn-outline-primary btn-lg rounded-pill mb-3 mx-2 px-4 py-3">View Bus Schedules</a>
                                <a href="@Url.Action("TaxiReservations", "Taxi")" class="btn btn-outline-success btn-lg rounded-pill mb-3 mx-2 px-4 py-3">View Taxis</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
