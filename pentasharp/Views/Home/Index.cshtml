@{
    Layout = "_Layout";
    ViewData["Title"] = "Transport Services";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to PentaSharp</h1>
        <p class="lead text-muted fs-5">Your reliable partner for seamless transport scheduling.</p>
    </div>
    <div class="row justify-content-center g-4">
        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-5 overflow-hidden h-100">
                <div class="card-body d-flex flex-column justify-content-center bg-white p-4 text-center">
                    <i class="fas fa-bus fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold text-dark fs-4 mb-2">Bus Schedules</h5>
                    <p class="card-text text-muted fs-6">Explore detailed bus schedules to plan your travel with ease.</p>
                    <a href="@Url.Action("BusSchedule", "Bus")" class="btn btn-primary btn-md rounded-pill mt-3 px-4 py-2 shadow-sm">View Bus Schedules</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-5 overflow-hidden h-100">
                <div class="card-body d-flex flex-column justify-content-center bg-white p-4 text-center">
                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                    <h5 class="card-title fw-bold text-dark fs-4 mb-2">Bus Reservations</h5>
                    <p class="card-text text-muted fs-6">Reserve seats easily on your preferred bus routes.</p>
                    <a href="@Url.Action("BusReservations", "Bus")" class="btn btn-success btn-md rounded-pill mt-3 px-4 py-2 shadow-sm">Reserve a Bus</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-5 overflow-hidden h-100">
                <div class="card-body d-flex flex-column justify-content-center bg-white p-4 text-center">
                    <i class="fas fa-taxi fa-3x text-warning mb-3"></i>
                    <h5 class="card-title fw-bold text-dark fs-4 mb-2">Taxi Bookings</h5>
                    <p class="card-text text-muted fs-6">Book a taxi quickly and conveniently for any destination.</p>
                    <a href="@Url.Action("TaxiBookings", "Taxi")" class="btn btn-warning btn-md rounded-pill mt-3 px-4 py-2 shadow-sm">Book a Taxi</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card border-0 shadow-lg rounded-5 overflow-hidden h-100">
                <div class="card-body d-flex flex-column justify-content-center bg-white p-4 text-center">
                    <i class="fas fa-clipboard-list fa-3x text-info mb-3"></i>
                    <h5 class="card-title fw-bold text-dark fs-4 mb-2">Taxi Reservations</h5>
                    <p class="card-text text-muted fs-6">Make advance reservations for taxis at your convenience.</p>
                    <a href="@Url.Action("TaxiReservations", "Taxi")" class="btn btn-info btn-md rounded-pill mt-3 px-4 py-2 shadow-sm">Reserve a Taxi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%);
        color: #343a40;
    }

    h1 {
        font-weight: 700;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 15px;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .btn {
        font-size: 1rem;
        font-weight: 500;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        padding: 0.5rem 1.5rem;
        border-radius: 30px;
    }

    .btn:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .text-center i {
        font-size: 3.5rem;
        transition: transform 0.3s ease;
    }

    .card:hover i {
        transform: scale(1.2);
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
