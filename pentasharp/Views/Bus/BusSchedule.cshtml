@{
    ViewBag.Title = "Bus Schedule";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Bus Schedule</h1>
    <div class="row mb-4">
        <div class="col-md-12">
            <form class="form-inline justify-content-center">
                <div class="form-group mb-2">
                    <label for="departure" class="sr-only">Departure</label>
                    <input type="text" class="form-control" id="departure" placeholder="Departure Location">
                </div>
                <div class="form-group mb-2">
                    <label for="arrival" class="sr-only">Arrival</label>
                    <input type="text" class="form-control" id="arrival" placeholder="Arrival Location">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Search</button>
            </form>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Bus Number</th>
                <th scope="col">Departure Time</th>
                <th scope="col">Arrival Time</th>
                <th scope="col">Duration</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>101</td>
                <td>09:00 AM</td>
                <td>11:00 AM</td>
                <td>2h</td>
                <td><span class="badge badge-secondary">On Time</span></td>
                <td class="text-center"><button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bookingModal">Book</button></td>
            </tr>
            <tr>
                <td>102</td>
                <td>10:30 AM</td>
                <td>12:30 PM</td>
                <td>2h</td>
                <td><span class="badge badge-secondary">Delayed</span></td>
                <td class="text-center"><button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bookingModal">Book</button></td>
            </tr>
            <tr>
                <td>103</td>
                <td>12:00 PM</td>
                <td>02:00 PM</td>
                <td>2h</td>
                <td><span class="badge badge-danger">Cancelled</span></td>
                <td class="text-center"><button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bookingModal">Book</button></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Confirm Your Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Bus Number:</strong> <span id="modalBusNumber">101</span></p>
                <p><strong>Departure:</strong> <span id="modalDeparture">09:00 AM</span></p>
                <p><strong>Arrival:</strong> <span id="modalArrival">11:00 AM</span></p>
                <div class="mb-3">
                    <label for="passengerName" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="passengerName" value="John Doe" readonly>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm Booking</button>
            </div>
        </div>
    </div>
</div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
