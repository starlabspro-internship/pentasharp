@{
    ViewBag.Title = "Bus Reservations";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Bus Reservations</h1>
        <p class="lead text-muted fs-5">Reserve your seats for a smooth and timely journey</p>
    </div>

    <div id="searchFormContainer" class="row justify-content-center mb-5">
        <div class="col-md-8">
            <form class="bg-light p-4 rounded shadow-sm" onsubmit="handleSearch(event)">
                <div class="row mb-3">
                    <div class="col-md-6 form-group">
                        <label for="departure" class="form-label">Departure</label>
                        <input type="text" class="form-control" id="departure" placeholder="Departure Location" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="arrival" class="form-label">Arrival</label>
                        <input type="text" class="form-control" id="arrival" placeholder="Arrival Location" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 form-group">
                        <label for="reservationDate" class="form-label">Reservation Date</label>
                        <input type="date" class="form-control" id="reservationDate" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="numberOfSeats" class="form-label">Number of Seats</label>
                        <input type="number" class="form-control" id="numberOfSeats" placeholder="Enter Seat Count" min="1" required>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-md rounded-pill px-4 py-2">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div id="busReservationContainer" class="container"></div>

    <button id="scrollToTopBtn" class="btn btn-secondary rounded-circle" onclick="scrollToTop()" style="display: none; position: fixed; bottom: 20px; right: 20px; width: 45px; height: 45px;">
        <i class="fas fa-arrow-up"></i>
    </button>
</div>

<div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="reservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Confirm Your Reservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>From:</strong> <span id="modalDeparture"></span></p>
                <p><strong>To:</strong> <span id="modalArrival"></span></p>
                <p><strong>Reservation Date:</strong> <span id="modalReservationDate"></span></p>
                <p><strong>Number of Seats:</strong> <span id="modalNumberOfSeats"></span></p>
                <p><strong>Total Amount:</strong> <span id="modalTotalAmount"></span></p>
                <p><strong>Payment Status:</strong> <span id="modalPaymentStatus"></span></p>
                <p><strong>Status:</strong> <span id="modalStatus" class="badge bg-warning text-dark">Pending</span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Confirm Reservation</button>
            </div>
        </div>
    </div>
</div>

<script>
    const loggedInUserName = "Gani Lala";

    function handleSearch(event) {
        event.preventDefault();

        const departure = document.getElementById('departure').value;
        const arrival = document.getElementById('arrival').value;
        const reservationDate = document.getElementById('reservationDate').value;
        const numberOfSeats = document.getElementById('numberOfSeats').value;
        const pricePerSeat = 15; 
        const totalAmount = pricePerSeat * numberOfSeats;
        const paymentStatus = "Unpaid";
        const status = "Pending";

        const busReservationContainer = document.getElementById('busReservationContainer');
        busReservationContainer.innerHTML = '';

        for (let i = 0; i < 2; i++) {
            const reservationCard = `
                <div class="container my-3" style="max-width: 600px;">
                    <div class="card shadow-sm border-0 p-4 rounded-4">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h5 class="fw-bold text-dark mb-1">Sharri Travel</h5>
                                <p class="text-muted mb-1">From <strong>${departure}</strong> to <strong>${arrival}</strong></p>
                                <p class="text-muted">Seats: ${numberOfSeats} | Date: ${reservationDate}</p>
                                <p class="text-muted">Total: €${totalAmount}</p>
                            </div>
                            <div class="col-4 text-end">
                                <span class="badge bg-success mb-2">€${pricePerSeat} per seat</span>
                                <button class="btn btn-dark rounded-pill" onclick="openReservationModal('${departure}', '${arrival}', '${reservationDate}', '${numberOfSeats}', '€${totalAmount}', '${paymentStatus}', '${status}')">Reserve Now</button>
                            </div>
                        </div>
                    </div>
                </div>`;

            busReservationContainer.insertAdjacentHTML('beforeend', reservationCard);
        }

        if (busReservationContainer.children.length > 2) {
            document.getElementById('scrollToTopBtn').style.display = 'block';
        }
    }

    function openReservationModal(departure, arrival, reservationDate, numberOfSeats, totalAmount, paymentStatus, status) {
        document.getElementById('modalDeparture').textContent = departure;
        document.getElementById('modalArrival').textContent = arrival;
        document.getElementById('modalReservationDate').textContent = reservationDate;
        document.getElementById('modalNumberOfSeats').textContent = numberOfSeats;
        document.getElementById('modalTotalAmount').textContent = totalAmount;
        document.getElementById('modalPaymentStatus').textContent = paymentStatus;
        document.getElementById('modalStatus').textContent = status;
        new bootstrap.Modal(document.getElementById('reservationModal')).show();
    }

    function scrollToTop() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    document.addEventListener("DOMContentLoaded", function () {
        const dateInput = document.getElementById("reservationDate");
        const today = new Date().toISOString().split("T")[0];
        dateInput.value = today;
        dateInput.placeholder = today;
    });
</script>

<style>
    body {
        background-color: #f4f7fa;
        font-family: Arial, sans-serif;
        color: #343a40;
    }

    h1 {
        font-size: 2.5rem;
        color: #007bff;
        font-weight: 700;
    }

    .card {
        border-radius: 10px;
        transition: box-shadow 0.3s;
    }

        .card:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .badge {
        font-size: 0.85rem;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
    }

        .btn-dark:hover {
            background-color: #1d1e22;
        }
</style>

