@using pentasharp.ViewModel.Bus
@model BusCompanyViewModel

@{
    ViewData["Title"] = "Delete Bus Company";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 rounded-4">
                <h3 class="fw-bold text-secondary mb-3">Delete Bus Company</h3>
                <p>Are you sure you want to delete this bus company?</p>

                <!-- Display Company Details -->
                <p><strong>@Model.CompanyName</strong></p>
                <p>Contact: @Model.ContactInfo</p>

                <form asp-action="DeleteConfirmed" asp-route-id="@Model.BusCompanyId" method="post">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a href="@Url.Action("AddBusCompany", "BusScheduleCompany")" class="btn btn-secondary btn-lg">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
