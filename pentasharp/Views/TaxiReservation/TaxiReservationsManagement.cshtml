@{
    ViewData["Title"] = "Taxi Reservations Management";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold text-primary">Taxi Reservations Dashboard</h1>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4 d-flex">
            <div class="card text-center shadow-sm action-card flex-fill">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="icon-container mb-3">
                        <i class="fas fa-calendar-check fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-primary fw-bold">Incoming Reservations</h5>
                    <p class="card-text text-muted">View and confirm upcoming taxi reservations.</p>
                    <a href="@Url.Action("IncomingReservations", "TaxiReservation")" class="btn btn-outline-primary">View Incoming Reservations</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex">
            <div class="card text-center shadow-sm action-card flex-fill">
                <div class="card-body d-flex flex-column align-items-center justify-content-between">
                    <div class="icon-container mb-3">
                        <i class="fas fa-list-alt fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title text-primary fw-bold">Manage Current Reservations</h5>
                    <p class="card-text text-muted">Manage and update details for ongoing reservations.</p>
                    <a href="@Url.Action("ManageCurrentReservations", "TaxiReservation")" class="btn btn-outline-primary">Manage Reservations</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .action-card {
        height: 100%;
        border-radius: 8px;
        padding: 25px;
        transition: transform 0.2s ease-in-out;
    }

        .action-card:hover {
            transform: scale(1.03);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-size: 1.3rem;
        margin-top: 0.5rem;
    }

    .icon-container {
        color: #007bff;
        border-radius: 50%;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .btn {
        margin-top: auto;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
