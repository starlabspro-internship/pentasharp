@{
    ViewData["Title"] = "Manage Current Taxi Reservations";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold text-primary">Manage Current Taxi Reservations</h1>

    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary">John Doe</h5>
                    <p class="text-muted mb-1">Pickup Location: Central Park</p>
                    <p class="text-muted mb-1">Dropoff Location: Times Square</p>
                    <p class="text-muted mb-1">Reservation Date: 2024-11-20</p>
                    <p class="text-muted mb-1">Pickup Time: <strong>08:00 AM</strong></p>
                    <p class="text-muted mb-1">
                        Status: <span class="badge bg-warning">Pending</span>
                    </p>
                    <p class="text-muted mb-1">
                        Driver: <strong>Alex Smith</strong> <br>
                        <small class="text-muted">License Plate: XYZ-1234</small>
                    </p>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-sm btn-outline-info" onclick="openEditReservationModal('John Doe', 'Central Park', 'Times Square', '08:00 AM', 'Pending', 'Alex Smith', '2024-11-20')">
                            Edit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editReservationModal" tabindex="-1" aria-labelledby="editReservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title fw-bold" id="editReservationModalLabel">Edit Reservation</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editReservationForm">
                    <div class="mb-2">
                        <label class="form-label small">Passenger</label>
                        <input type="text" id="editPassengerName" class="form-control form-control-sm" readonly>
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Pickup Location</label>
                        <input type="text" id="editPickupLocation" class="form-control form-control-sm">
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Dropoff Location</label>
                        <input type="text" id="editDropoffLocation" class="form-control form-control-sm">
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Reservation Date</label>
                        <input type="date" id="editReservationDate" class="form-control form-control-sm">
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Pickup Time</label>
                        <input type="time" id="editPickupTime" class="form-control form-control-sm">
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Status</label>
                        <select id="editStatus" class="form-select form-select-sm">
                            <option value="Pending">Pending</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                            <option value="Canceled">Canceled</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Assign Driver</label>
                        <select id="editDriver" class="form-select form-select-sm">
                            <option value="Alex Smith">Alex Smith - XYZ-1234</option>
                            <option value="David Miller">David Miller - ABC-5678</option>
                            <option value="Sarah Lee">Sarah Lee - LMN-9101</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="saveReservationChanges()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openEditReservationModal(passengerName, pickupLocation, dropoffLocation, pickupTime, status, driverName, reservationDate) {
        document.getElementById('editPassengerName').value = passengerName;
        document.getElementById('editPickupLocation').value = pickupLocation;
        document.getElementById('editDropoffLocation').value = dropoffLocation;
        document.getElementById('editPickupTime').value = pickupTime;
        document.getElementById('editReservationDate').value = reservationDate;
        document.getElementById('editStatus').value = status;
        document.getElementById('editDriver').value = driverName;
        new bootstrap.Modal(document.getElementById('editReservationModal')).show();
    }

    function saveReservationChanges() {
        const passengerName = document.getElementById('editPassengerName').value;
        const driver = document.getElementById('editDriver').value;
        alert(`Reservation for ${passengerName} has been updated and assigned to ${driver}.`);
        document.getElementById('editReservationModal').querySelector('.btn-close').click();
    }
</script>

<style>
    .card {
        border-radius: 12px;
    }

    .btn-outline-info {
        color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8;
        color: white;
    }

    .modal-sm {
        max-width: 400px;
    }

    .modal-header, .modal-footer {
        padding: 0.5rem;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
