@if (Model.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var reservation in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            Reservation #@reservation.ReservationId
                        </div>
                        <div class="card-body">
                            <p><strong>Pickup Location:</strong> @reservation.PickupLocation</p>
                            @{
                                if (DateTime.TryParse(reservation.ReservationTime, out DateTime reservationDate))
                                {
                                    <p><strong>Date & Time:</strong> @reservationDate.ToString("g", System.Globalization.CultureInfo.CurrentCulture)</p>
                                }
                                else
                                {
                                    <p><strong>Date & Time:</strong> Invalid date</p>
                                }
                            }
                            <p><strong>Dropoff Location:</strong> @reservation.DropoffLocation</p>
                            <p><strong>Driver:</strong> @reservation.Driver</p>
                            <p><strong>Status:</strong> @reservation.Status.ToString()</p>
                            <p><strong>Fare:</strong> @(reservation.Fare.HasValue ? reservation.Fare.Value.ToString("C", System.Globalization.CultureInfo.CurrentCulture) : "N/A")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <strong>No reservations found.</strong> You haven't made any taxi reservations yet.
    </div>
}
