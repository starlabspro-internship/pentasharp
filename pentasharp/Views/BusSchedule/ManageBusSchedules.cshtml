@{
    ViewData["Title"] = "Manage Bus Schedules";
}

<div class="container my-5">
    <h1 class="text-center fw-bold text-primary mb-4">Manage Bus Schedules</h1>

    <div class="text-end mb-3">
        <button class="btn btn-primary" onclick="openAddScheduleModal()">Add New Schedule</button>
    </div>

    <div class="table-responsive">
        <table class="table custom-table shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>Schedule ID</th>
                    <th>Route</th>
                    <th>Bus</th>
                    <th>Departure Time</th>
                    <th>Arrival Time</th>
                    <th>Price (€)</th>
                    <th>Status</th>
                    <th>Available Seats</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>New York to Washington</td>
                    <td>Bus A</td>
                    <td>08:00 AM</td>
                    <td>10:00 AM</td>
                    <td>15.00</td>
                    <td><span class="badge bg-success">Scheduled</span></td>
                    <td>30</td>
                    <td>
                        <button class="btn btn-info btn-sm rounded-pill px-3" onclick="openEditScheduleModal(1)">Edit</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addScheduleModal" tabindex="-1" aria-labelledby="addScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title fw-bold" id="addScheduleModalLabel">Add Schedule</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">
                <form id="addScheduleForm">
                    <div class="mb-2">
                        <label for="addFromCity" class="form-label">From</label>
                        <input id="addFromCity" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="mb-2">
                        <label for="addToCity" class="form-label">To</label>
                        <input id="addToCity" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="mb-2">
                        <label for="addBus" class="form-label">Bus</label>
                        <select id="addBus" class="form-select form-select-sm" required></select>
                    </div>
                    <div class="row g-1">
                        <div class="col">
                            <label for="addDepartureTime" class="form-label">Departure</label>
                            <input type="time" id="addDepartureTime" class="form-control form-control-sm" required>
                        </div>
                        <div class="col">
                            <label for="addArrivalTime" class="form-label">Arrival</label>
                            <input type="time" id="addArrivalTime" class="form-control form-control-sm" required>
                        </div>
                    </div>
                    <div class="row g-1 mt-2">
                        <div class="col">
                            <label for="addPrice" class="form-label">Price (€)</label>
                            <input type="number" id="addPrice" class="form-control form-control-sm" min="0" step="0.01" required>
                        </div>
                        <div class="col">
                            <label for="addAvailableSeats" class="form-label">Seats</label>
                            <input type="number" id="addAvailableSeats" class="form-control form-control-sm" min="1" required>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="addNewSchedule()">Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editScheduleModal" tabindex="-1" aria-labelledby="editScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title fw-bold" id="editScheduleModalLabel">Edit Schedule</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">
                <form id="editScheduleForm">
                    <div class="mb-2">
                        <label for="editFromCity" class="form-label">From</label>
                        <input id="editFromCity" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="mb-2">
                        <label for="editToCity" class="form-label">To</label>
                        <input id="editToCity" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="mb-2">
                        <label for="editBus" class="form-label">Bus</label>
                        <select id="editBus" class="form-select form-select-sm" required></select>
                    </div>
                    <div class="row g-1">
                        <div class="col">
                            <label for="editDepartureTime" class="form-label">Departure</label>
                            <input type="time" id="editDepartureTime" class="form-control form-control-sm" required>
                        </div>
                        <div class="col">
                            <label for="editArrivalTime" class="form-label">Arrival</label>
                            <input type="time" id="editArrivalTime" class="form-control form-control-sm" required>
                        </div>
                    </div>
                    <div class="row g-1 mt-2">
                        <div class="col">
                            <label for="editPrice" class="form-label">Price (€)</label>
                            <input type="number" id="editPrice" class="form-control form-control-sm" min="0" step="0.01" required>
                        </div>
                        <div class="col">
                            <label for="editAvailableSeats" class="form-label">Seats</label>
                            <input type="number" id="editAvailableSeats" class="form-control form-control-sm" min="1" required>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm" onclick="saveScheduleChanges()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openAddScheduleModal() {
        new bootstrap.Modal(document.getElementById('addScheduleModal')).show();
    }

    function addNewSchedule() {
        alert("New schedule has been added!");
    }

    function openEditScheduleModal(scheduleId) {
        new bootstrap.Modal(document.getElementById('editScheduleModal')).show();
    }

    function saveScheduleChanges() {
        alert("Schedule changes have been saved!");
    }
</script>
