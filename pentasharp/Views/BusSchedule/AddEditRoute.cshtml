@model pentasharp.ViewModel.BusSchedule.AddRouteViewModel

<div class="modal fade" id="routeModal" tabindex="-1" aria-labelledby="routeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title fw-bold" id="routeModalLabel">Add/Edit Route</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">
                <form id="routeForm" method="post" onsubmit="return saveRoute()">
                    <div class="mb-2">
                        <label for="FromLocation" class="form-label">From Location</label>
                        <input id="FromLocation" name="FromLocation" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="mb-2">
                        <label for="ToLocation" class="form-label">To Location</label>
                        <input id="ToLocation" name="ToLocation" type="text" class="form-control form-control-sm" required />
                    </div>
                    <div class="row g-1 mb-2">
                        <label class="form-label">Estimated Duration</label>
                        <div class="col">
                            <input id="estimatedHours" name="Hours" type="number" class="form-control form-control-sm" min="0" step="1" placeholder="Hours" required />
                        </div>
                        <div class="col">
                            <input id="estimatedMinutes" name="Minutes" type="number" class="form-control form-control-sm" min="0" max="59" step="1" placeholder="Minutes" required />
                        </div>
                    </div>
                    <input type="hidden" id="EstimatedDuration" name="EstimatedDuration" />
                    <button type="submit" class="btn btn-primary btn-sm btn-custom mt-2">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>