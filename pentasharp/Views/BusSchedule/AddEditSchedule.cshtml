<div class="modal fade" id="scheduleModal" tabindex="-1" aria-labelledby="scheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title fw-bold" id="scheduleModalLabel">Add Schedule</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3">
                <form id="scheduleForm">
                    <div class="mb-2">
                        <label for="routeId" class="form-label">Route</label>
                        <select id="routeId" name="RouteId" class="form-select form-select-sm" required></select>
                    </div>
                    <div class="row g-1">
                        <div class="col">
                            <label for="departureTime" class="form-label">Departure Time</label>
                            <input type="time" id="departureTime" name="DepartureTime" class="form-control form-control-sm" required onchange="calculateArrivalTime()" />
                        </div>
                        <div class="col">
                            <label for="arrivalTime" class="form-label">Arrival Time</label>
                            <input type="time" id="arrivalTime" name="ArrivalTime" class="form-control form-control-sm" readonly />
                        </div>
                    </div>
                    <div class="row g-1 mt-2">
                        <div class="col">
                            <label for="price" class="form-label">Price (€)</label>
                            <input type="number" id="price" name="Price" class="form-control form-control-sm" min="0" step="0.01" required />
                        </div>
                        <div class="col">
                            <label for="availableSeats" class="form-label">Available Seats</label>
                            <input type="number" id="availableSeats" name="AvailableSeats" class="form-control form-control-sm" min="1" required />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-secondary btn-sm btn-custom" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-sm btn-custom" onclick="saveSchedule()">Save</button>
            </div>
        </div>
    </div>
</div>