@{
    ViewData["Title"] = "Confirm Bus Schedules";
}

<div class="container my-5">
    <h1 class="text-center fw-bold text-primary mb-4">Confirm Bus Schedules</h1>

    <div class="list-group">
        <div class="list-group-item d-flex align-items-center justify-content-between shadow-sm p-3 mb-2 rounded">
            <div class="schedule-details">
                <h6 class="mb-1 fw-bold">Route: Downtown to Uptown</h6>
                <small class="text-muted">Bus Number: BU123 | Schedule ID: 1</small><br>
                <small class="text-muted">Departure: 08:00 AM | Arrival: 10:00 AM | Seats: 30/50</small><br>
                <small class="text-muted">Price: €20.00 | Status: Scheduled</small>
            </div>
            <div class="action-buttons">
                <button class="btn btn-outline-success btn-sm me-2" onclick="confirmSchedule(1)">
                    <i class="fas fa-check"></i> Confirm
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="cancelSchedule(1)">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>

        <div class="list-group-item d-flex align-items-center justify-content-between shadow-sm p-3 mb-2 rounded">
            <div class="schedule-details">
                <h6 class="mb-1 fw-bold">Route: Central Station to Airport</h6>
                <small class="text-muted">Bus Number: BU456 | Schedule ID: 2</small><br>
                <small class="text-muted">Departure: 01:00 PM | Arrival: 03:00 PM | Seats: 25/50</small><br>
                <small class="text-muted">Price: €15.00 | Status: Scheduled</small>
            </div>
            <div class="action-buttons">
                <button class="btn btn-outline-success btn-sm me-2" onclick="confirmSchedule(2)">
                    <i class="fas fa-check"></i> Confirm
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="cancelSchedule(2)">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmSchedule(scheduleId) {
        alert(`Schedule ID ${scheduleId} has been confirmed.`);
    }

    function cancelSchedule(scheduleId) {
        alert(`Schedule ID ${scheduleId} has been cancelled.`);
    }
</script>

<style>
    .schedule-details {
        font-size: 0.9rem;
    }

    .action-buttons .btn {
        font-size: 0.85rem;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>