@{
    ViewData["Title"] = "Management Dashboard";
}

<div class="container my-5">

    <div class="row g-4 dashboard-container justify-content-center" style="margin-top: -20px;">
        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-bus-alt fa-2x"></i>
                    </div>
                    <h6 class="card-title">Bus Schedules</h6>
                    <p class="stat-number">45</p>
                    <a href="@Url.Action("BusScheduleManagement", "BusSchedule")" class="dashboard-link mt-auto">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-ticket-alt fa-2x"></i>
                    </div>
                    <h6 class="card-title">Bus Reservations</h6>
                    <p class="stat-number">350</p>
                    <a href="@Url.Action("BusReservationsManagement", "BusReservation")" class="dashboard-link mt-auto">View</a>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-taxi fa-2x"></i>
                    </div>
                    <h6 class="card-title">Taxi Bookings</h6>
                    <p class="stat-number">120</p>
                    <a href="@Url.Action("TaxiBookingsManagement", "TaxiBookingManagement")" class="dashboard-link mt-auto">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                    <h6 class="card-title">Taxi Reservations</h6>
                    <p class="stat-number">80</p>
                    <a href="@Url.Action("TaxiReservationsManagement", "TaxiReservationManagement")" class="dashboard-link mt-auto">Manage</a>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-user-tie fa-2x"></i>
                    </div>
                    <h6 class="card-title">Taxi Driver</h6>
                    <p class="stat-number">25</p>
                    <a href="@Url.Action("TaxiDriverManagement", "TaxiDriver")" class="dashboard-link mt-auto">Manage</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4 align-items-center justify-content-center">
        <div class="col-lg-3 col-md-4 col-sm-6 d-flex justify-content-center">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <h6 class="card-title">Add New Company and Bus</h6>
                    <a href="@Url.Action("AddBusCompany", "BusScheduleCompany")" class="dashboard-link mt-auto">Add</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 text-center">
            <h6 class="fw-bold text-secondary visually-hidden">Usage Snapshot</h6>
            <div style="max-width: 200px; margin: 0 auto;">
                <canvas id="circularChart"></canvas>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 d-flex justify-content-center">
            <div class="card compact-card text-center shadow-sm">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="icon-container mb-2">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <h6 class="card-title">Add New Company and Taxi</h6>
                    <a href="@Url.Action("AddTaxiCompany", "TaxiCompanyBooking")" class="dashboard-link mt-auto">Add</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('circularChart').getContext('2d');
    const circularChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Bus Reservations Used', 'Taxi Reservations Used', 'Available'],
            datasets: [{
                data: [45, 35, 20],
                backgroundColor: ['#42a5f5', '#66bb6a', '#ffd54f'],
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            cutout: '70%',
            plugins: {
                legend: {
                    display: true,
                    position: 'bottom'
                }
            }
        }
    });
</script>

<style>
    body {
        background-color: #f7f9fc;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .dashboard-title {
        font-size: 2rem;
        color: #1a237e;
        text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.1);
    }

    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .compact-card {
        height: 200px;
        border-radius: 10px;
        background: linear-gradient(135deg, #4f8bff, #6fb1fc);
        color: #fff;
        text-align: center;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .compact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .icon-container {
        color: #ffd54f;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background-color: rgba(255, 213, 79, 0.15);
        border-radius: 50%;
        margin: 0 auto;
    }

    .compact-card .card-title {
        font-size: 1rem;
        font-weight: 600;
        margin-top: 5px;
    }

    .dashboard-link {
        padding: 5px 10px;
        font-size: 0.85rem;
        color: #333;
        background-color: #ffd54f;
        border-radius: 20px;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(255, 213, 79, 0.4);
        text-decoration: none;
        margin-top: auto;
    }

        .dashboard-link:hover {
            background-color: #ffc107;
            transform: scale(1.05);
        }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
