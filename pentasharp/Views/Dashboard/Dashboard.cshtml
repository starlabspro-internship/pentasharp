@model pentasharp.ViewModel.Dashboard.DashboardViewModel
@{
    var businessType = ViewContext.HttpContext.Session.GetString("BusinessType");
    var isAdmin = ViewContext.HttpContext.Session.GetString("IsAdmin") == "true";
    var role = ViewContext.HttpContext.Session.GetString("UserRole");

    Layout = "_DashboardLayout";
    ViewData["Title"] = "Dashboard";
}
<div class="container-fluid py-4">
    <div class="row">
        @if (businessType == "BusCompany" && role == "Admin")
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-box bg-gradient-primary shadow text-center border-radius-lg mb-4 d-flex justify-content-center align-items-center"
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-calendar3 text-white" style="font-size: 50px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Bus Schedule</h6>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a asp-controller="BusSchedule" asp-action="BusScheduleManagement" class="btn btn-outline-primary w-100">Manage</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-box bg-gradient-primary shadow text-center border-radius-lg mb-4 d-flex justify-content-center align-items-center"
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-bus-front text-white" style="font-size: 50px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Bus Reservation</h6>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a asp-controller="BusSchedule" asp-action="BusReservationManagement" class="btn btn-outline-primary w-100">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (businessType == "TaxiCompany" && role == "Admin")
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-box bg-gradient-primary shadow text-center border-radius-lg mb-4 d-flex justify-content-center align-items-center"
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-car-front text-white" style="font-size: 50px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Taxi Booking</h6>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a asp-controller="TaxiManagement" asp-action="TaxiBookingManagement" class="btn btn-outline-primary w-100">Manage</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="icon-box bg-gradient-primary shadow text-center border-radius-lg mb-4 d-flex justify-content-center align-items-center"
                                 style="width: 100px; height: 100px;">
                                <i class="bi bi-receipt text-white" style="font-size: 50px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Taxi Reservation</h6>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a asp-controller="TaxiManagement" asp-action="TaxiReservationManagement" class="btn btn-outline-primary w-100">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (isAdmin)
        {
            <div class="row justify-content-center mt-4">
                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-info shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-bus-front text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Bus Companies</h6>
                            <h4 class="font-weight-bold mt-2">@Model.BusCompanies</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-secondary shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-taxi-front text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Taxi Companies</h6>
                            <h4 class="font-weight-bold mt-2">@Model.TaxiCompanies</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-primary shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-calendar3 text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Bus Schedules</h6>
                            <h4 class="font-weight-bold mt-2">@Model.BusSchedules</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-success shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-check2-circle text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Bus Reservations</h6>
                            <h4 class="font-weight-bold mt-2">@Model.BusReservations</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-warning shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-car-front text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Total Drivers</h6>
                            <h4 class="font-weight-bold mt-2">@Model.TaxiDrivers</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-secondary shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-receipt text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Taxi Bookings</h6>
                            <h4 class="font-weight-bold mt-2">@Model.TaxiBookings</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-danger shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-clipboard2-check text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Taxi Reservations</h6>
                            <h4 class="font-weight-bold mt-2">@Model.TaxiReservations</h4>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg border-0 text-center h-100">
                        <div class="card-body">
                            <div class="icon-box bg-gradient-dark shadow text-center border-radius-lg mb-3 d-flex justify-content-center align-items-center"
                                 style="width: 70px; height: 70px;">
                                <i class="bi bi-people text-white" style="font-size: 30px;"></i>
                            </div>
                            <h6 class="text-uppercase font-weight-bold mb-0">Active Users</h6>
                            <h4 class="font-weight-bold mt-2">@Model.TotalUsers</h4>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger">You do not have permission to access this page.</div>
        }
    </div>
    <div class="row mt-4">
        <div class="col-lg-7 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="d-flex flex-column h-100">
                                <p class="mb-1 pt-2 text-bold">About Our Project</p>
                                <h5 class="font-weight-bolder">Comprehensive Transportation Management</h5>
                                <p class="mb-5">
                                    Our system simplifies the management of transportation
                                    services, including bus schedules, bus reservations, taxi
                                    bookings, and taxi reservations, ensuring efficiency and
                                    ease of use for both users and operators.
                                </p>
                                <a class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto"
                                   href="https://github.com/starlabspro-internship/pentasharp/blob/main/Project%20Documentation%20(2).txt"
                                   target="_blank"
                                   rel="noopener noreferrer">
                                    Learn More
                                    <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
                            <div class="bg-gradient-primary border-radius-lg h-100">
                                <img src="~/img/shapes/waves-white.svg" class="position-absolute h-100 w-50 top-0 d-lg-block d-none" alt="waves" />
                                <div class="position-relative d-flex align-items-center justify-content-center h-100">
                                    <i class="bi bi-truck text-white" style="font-size: 50px"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card h-100 p-3">
                <div class="overflow-hidden position-relative border-radius-lg bg-cover h-100" style="background-image: url('~/img/transport-background.jpg');">
                    <span class="mask bg-gradient-dark"></span>
                    <div class="card-body position-relative z-index-1 d-flex flex-column h-100 p-3">
                        <h5 class="text-white font-weight-bolder mb-4 pt-2">Features of Our System</h5>
                        <ul class="text-white mb-4">
                            <li>
                                <i class="bi bi-calendar-check" style="font-size: 20px; margin-right: 8px"></i>
                                Manage and view Bus Schedules seamlessly
                            </li>
                            <li>
                                <i class="bi bi-bus-front" style="font-size: 20px; margin-right: 8px"></i>
                                Efficient Bus Reservation system
                            </li>
                            <li>
                                <i class="bi bi-taxi-front" style="font-size: 20px; margin-right: 8px"></i>
                                Quick and reliable Taxi Booking
                            </li>
                            <li>
                                <i class="bi bi-receipt" style="font-size: 20px; margin-right: 8px"></i>
                                Streamlined Taxi Reservation services
                            </li>
                        </ul>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-5 mb-lg-0 mb-4">
            <div class="card z-index-2">
                <div class="card-body p-3">
                    <div class="bg-gradient-dark border-radius-lg py-3 pe-1 mb-3">
                        <div class="chart">
                            <canvas id="chart-bars" class="chart-canvas" height="170"></canvas>
                        </div>
                    </div>
                    <h6 class="ms-2 mt-4 mb-0">Transportation Overview</h6>
                    <p class="text-sm ms-2">
                        (<span class="font-weight-bolder">+15%</span>) this month
                    </p>
                    <div class="container border-radius-lg">
                        <div class="row">
                            <div class="col-3 py-3 ps-0">
                                <div class="d-flex mb-2">
                                    <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-primary text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-calendar-check" style="font-size: 18px"></i>
                                    </div>
                                    <p class="text-xs mt-1 mb-0 font-weight-bold">Bus Schedule</p>
                                </div>
                                <h4 class="font-weight-bolder">120</h4>
                                <div class="progress w-75">
                                    <div class="progress-bar bg-dark w-70" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="col-3 py-3 ps-0">
                                <div class="d-flex mb-2">
                                    <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-info text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-bus-front" style="font-size: 18px"></i>
                                    </div>
                                    <p class="text-xs mt-1 mb-0 font-weight-bold">Bus Reservation</p>
                                </div>
                                <h4 class="font-weight-bolder">85</h4>
                                <div class="progress w-75">
                                    <div class="progress-bar bg-dark w-65" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="col-3 py-3 ps-0">
                                <div class="d-flex mb-2">
                                    <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-warning text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-taxi-front" style="font-size: 18px"></i>
                                    </div>
                                    <p class="text-xs mt-1 mb-0 font-weight-bold">Taxi Booking</p>
                                </div>
                                <h4 class="font-weight-bolder">42</h4>
                                <div class="progress w-75">
                                    <div class="progress-bar bg-dark w-60" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="col-3 py-3 ps-0">
                                <div class="d-flex mb-2">
                                    <div class="icon icon-shape icon-xxs shadow border-radius-sm bg-gradient-danger text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-receipt" style="font-size: 18px"></i>
                                    </div>
                                    <p class="text-xs mt-1 mb-0 font-weight-bold">Taxi Reservation</p>
                                </div>
                                <h4 class="font-weight-bolder">30</h4>
                                <div class="progress w-75">
                                    <div class="progress-bar bg-dark w-50" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card z-index-2">
                <div class="card-header pb-0">
                    <h6>Reservations Overview</h6>
                    <p class="text-sm">
                        <i class="fa fa-arrow-up text-success"></i>
                        <span class="font-weight-bold">10% increase</span> in bookings this month
                    </p>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="chart-line" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>