@* CreateCompany.cshtml *@
@{
    ViewBag.Title = "Add Company and Bus";
}

<h2>Add Bus Company</h2>
<form method="post" action="/BusCompanies/AddCompany">
    <div class="form-group">
        <label for="CompanyName">Company Name</label>
        <input type="text" id="CompanyName" name="CompanyName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ContactInfo">Contact Info</label>
        <input type="text" id="ContactInfo" name="ContactInfo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Company</button>
</form>

<hr />

<h2>Add Bus</h2>
<form method="post" action="/Buses/AddBus">
    <div class="form-group">
        <label for="BusNumber">Bus Number</label>
        <input type="text" id="BusNumber" name="BusNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="BusCompanyId">Bus Company</label>
        <select id="BusCompanyId" name="BusCompanyId" class="form-control" required>
            <option value="">Select a Company</option>
            <option value="1">City Transport Co.</option>
            <option value="2">Metro Lines</option>
            <option value="3">Express Bus Service</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Capacity">Capacity</label>
        <input type="number" id="Capacity" name="Capacity" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Bus</button>
</form>