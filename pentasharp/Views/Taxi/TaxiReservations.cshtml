@{
    ViewBag.Title = "Taxi Reservations";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Taxi Reservations</h1>

    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <div class="input-group">
                <input type="search" class="form-control" placeholder="Search by company name" aria-label="Search" aria-describedby="search-addon" />
                <span class="input-group-text bg-primary text-white" id="search-addon">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="company-box p-3 mb-4 shadow-sm rounded">
                <h5 class="company-name">City Taxi Co.</h5>
                <p class="text-muted">Reliable & Safe Transport</p>
                <p><strong>Available Taxis:</strong> <span class="text-success">15</span></p>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <span class="text-muted">Operating in Downtown & Suburbs</span>
                </div>
                <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#bookingModal" data-company="City Taxi Co.">
                    Book Taxi
                </button>
            </div>
        </div>

        <div class="col-md-4">
            <div class="company-box p-3 mb-4 shadow-sm rounded">
                <h5 class="company-name">Metro Taxi Services</h5>
                <p class="text-muted">Fast & Convenient Service</p>
                <p><strong>Available Taxis:</strong> <span class="text-success">10</span></p>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <span class="text-muted">Citywide Coverage</span>
                </div>
                <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#bookingModal" data-company="Metro Taxi Services">
                    Book Taxi
                </button>
            </div>
        </div>

        <div class="col-md-4">
            <div class="company-box p-3 mb-4 shadow-sm rounded">
                <h5 class="company-name">Express Cabs</h5>
                <p class="text-muted">On-Demand Taxi Service</p>
                <p><strong>Available Taxis:</strong> <span class="text-success">20</span></p>
                <div class="location-info">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <span class="text-muted">Servicing All Areas</span>
                </div>
                <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#bookingModal" data-company="Express Cabs">
                    Book Taxi
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Confirm Your Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="bookingDetails">
                    <p><strong>Taxi Company:</strong> <span id="companyName"></span></p>
                    <div class="mb-3">
                        <label for="pickupLocation" class="form-label">Pickup Location</label>
                        <input type="text" class="form-control" id="pickupLocation" placeholder="Enter pickup location" required>
                    </div>
                    <div class="mb-3">
                        <label for="dropoffLocation" class="form-label">Dropoff Location</label>
                        <input type="text" class="form-control" id="dropoffLocation" placeholder="Enter dropoff location" required>
                    </div>
                    <div class="mb-3">
                        <label for="passengerName" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="passengerName" value="John Doe" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm Booking</button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f7fa;
        font-family: 'Arial', sans-serif;
        color: #343a40;
    }

    .company-box {
        background-color: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .company-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .company-name {
        font-weight: bold;
        color: #007bff;
    }

    .location-info {
        display: flex;
        align-items: center;
        margin-top: 5px;
    }

    .modal-content {
        border-radius: 8px;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-muted {
        color: #6c757d;
    }
</style>

<script>
    const bookingModal = document.getElementById('bookingModal');
    bookingModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        const companyName = button.getAttribute('data-company');
        const companyNameElement = document.getElementById('companyName');
        companyNameElement.textContent = companyName;
    });
</script>
