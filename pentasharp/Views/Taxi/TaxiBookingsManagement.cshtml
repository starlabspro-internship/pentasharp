@{
    ViewData["Title"] = "Taxi Bookings Management";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <div>
                <h2 class="text-center mb-4 fw-bold text-secondary">Manage Current Taxi Bookings</h2>
                <table class="table table-bordered shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>Passenger Name</th>
                            <th>Pickup Location</th>
                            <th>Dropoff Location</th>
                            <th>Pickup Time</th>
                            <th>Fare</th>
                            <th>Status</th>
                            <th>Driver</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John Doe</td>
                            <td>Central Park</td>
                            <td>Times Square</td>
                            <td><strong>08:00 AM</strong></td>
                            <td>$45.00</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td>
                                <p class="mb-0"><strong>Driver:</strong> Alex Smith</p>
                                <p class="mb-0"><strong>License Plate:</strong> XYZ-1234</p>
                            </td>
                        </tr>
                        <!-- Repeat for each booking -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center fw-bold">
                    Incoming Bookings
                </div>
                <div class="card-body">
                    <div class="booking-item d-flex justify-content-between align-items-center">
                        <div>
                            <p><strong>Passenger:</strong> Jane Smith</p>
                            <p>Pickup: Central Park</p>
                            <p>Dropoff: Times Square</p>
                            <p><strong>Pickup Time:</strong> <span class="text-primary">10:00 AM</span></p>
                        </div>
                        <div class="d-flex flex-column">
                            <button class="btn btn-sm btn-success mb-1">Confirm</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </div>
                    </div>
                    <hr>
                    <div class="booking-item d-flex justify-content-between align-items-center">
                        <div>
                            <p><strong>Passenger:</strong> Michael Johnson</p>
                            <p>Pickup: Wall Street</p>
                            <p>Dropoff: Empire State Building</p>
                            <p><strong>Pickup Time:</strong> <span class="text-primary">11:30 AM</span></p>
                        </div>
                        <div class="d-flex flex-column">
                            <button class="btn btn-sm btn-success mb-1">Confirm</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: #ffffff;
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

    .table {
        background-color: #ffffff;
    }

    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }

    .btn-success:hover {
        background-color: #28a745;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .booking-item {
        border-bottom: 1px solid #e0e0e0;
        padding: 10px 0;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
